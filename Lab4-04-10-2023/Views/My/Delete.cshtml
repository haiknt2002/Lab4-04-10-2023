@model Learner
<div class="ms-2 mx-2">
    <h1>Delete</h1>
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <form asp-controller="My" asp-action="Delete" asp-route-id="@Model.LearnerID" method="post" class="mt-3">
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="FirstMidName" class="col-sm-2 col-form-lable"></label>
            <div class="col-sm-10">
                <input asp-for="FirstMidName" class="form-control" placeholder="First Mid Name">
            </div>
            <span asp-validation-for="FirstMidName" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="LastName" class="col-sm-2 col-form-lable"></label>
            <div class="col-sm-10">
                <input asp-for="LastName" class="form-control" placeholder="First Mid Name">
            </div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="MajorID" class="col-sm-2 col-form-lable"></label>
            <div class="col-sm-10">
                <select asp-for="MajorID" class="custom-select mr-sm-2" asp-items="@ViewBag.MajorID"></select>
            </div>
            <span asp-validation-for="MajorID" class="text-danger"></span>
        </div>
        <div style="margin-top:7px" class="form-group row">
            <label asp-for="EnrollmentDate" class="col-sm-2 col-form-lable"></label>
            <div class="col-sm-10">
                <input asp-for="EnrollmentDate" class="form-control" placeholder="First Mid Name">
            </div>
            <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
        </div>
        <div style="margin-top:10px" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Delete</button>
            </div>
        </div>
    </form>
</div>